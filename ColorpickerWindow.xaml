<Window
		x:Class="PdfEater.ColorpickerWindow"
		xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:local="clr-namespace:PdfEater"
		Title="Choose a colour" Height="250" Width="400">
	<StackPanel Margin="20" VerticalAlignment="Stretch" HorizontalAlignment="Stretch">

		<Slider x:Name="HueSlider" Minimum="0" Maximum="360" Height="30" Margin="0,2" Value="180" HorizontalAlignment="Stretch" VerticalAlignment="Center" IsMoveToPointEnabled="True"/>
		<Slider x:Name="SaturationSlider" Minimum="0" Maximum="1" Height="30" Margin="0,2" Value="0.5" HorizontalAlignment="Stretch" VerticalAlignment="Center" IsMoveToPointEnabled="True"/>
		<Slider x:Name="ValueSlider" Minimum="0" Maximum="1" Height="30" Margin="0,2" Value="0.5" HorizontalAlignment="Stretch" VerticalAlignment="Center" IsMoveToPointEnabled="True"/>

		<Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="*" />
				<ColumnDefinition Width="Auto" />
			</Grid.ColumnDefinitions>
			<Grid Grid.Column="0" HorizontalAlignment="Left" Margin="0,20,0,0">
				<Grid.ColumnDefinitions>
					<ColumnDefinition Width="*" />
					<ColumnDefinition Width="Auto" />
				</Grid.ColumnDefinitions>
				<Rectangle x:Name="PreviewRect" Grid.Column="0" Height="50" Width="100" Margin="0,0,20,0" HorizontalAlignment="Right"/>
				<TextBox x:Name="HexBox" Grid.Column="1" Text="#FFFFFF" KeyUp="HexBox_KeyUp" VerticalAlignment="Bottom" HorizontalAlignment="Left" BorderBrush="Black" BorderThickness="1"/>
			</Grid>
			<StackPanel Orientation="Horizontal" Grid.Column="1" HorizontalAlignment="Stretch">
				<Button x:Name="BtnAccept" Content="Ok" Margin="0,0,10,0" Click="BtnAccept_Click" HorizontalAlignment="Right" VerticalAlignment="Bottom" Width="50"/>
				<Button x:Name="BtnDeny" Content="Cancel" Click="BtnDeny_Click" HorizontalAlignment="Right" VerticalAlignment="Bottom" Width="50"/>
			</StackPanel>
		</Grid>
	</StackPanel>
</Window>

