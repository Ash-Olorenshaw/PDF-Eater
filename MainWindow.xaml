<Window x:Class="PdfEater.MainWindow"
		xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:local="clr-namespace:PdfEater"
		Title="PDF Eater" Height="600" Width="800">
	<Grid>
		<ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto" PanningMode="Both">
			<StackPanel x:Name="PagesPanel" Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Top" PreviewMouseWheel="PagesPanel_OnMouseWheel">
				<StackPanel.LayoutTransform>
					<ScaleTransform x:Name="PagesPanelZoomTransform" ScaleX="1" ScaleY="1"/>
				</StackPanel.LayoutTransform>
			</StackPanel>
		</ScrollViewer>
		<Border Background="#AA333333"
				HorizontalAlignment="Right"
				VerticalAlignment="Center"
				CornerRadius="8"
				Margin="10"
				Padding="10">
			<StackPanel>
				<Button x:Name="BtnOpenfile" Content="Open" Margin="0,2" Click="BtnOpenfile_Click"/>
				<Button x:Name="BtnSave" Content="Save" Margin="0,2" Click="BtnSave_Click"/>
				<Button x:Name="BtnFreehand" Content="Freehand" Margin="0,2" Click="BtnFreehand_Click"/>
				<Button x:Name="BtnRule" Content="Ruler" Margin="0,2" Click="BtnRule_Click"/>
				<Button x:Name="BtnRuleWavy" Content="Wavy ruler" Margin="0,2" Click="BtnRuleWavy_Click"/>
				<Button x:Name="BtnColors" Content="Color" Margin="0,2" Click="BtnColor_Click"/>
				<Button x:Name="BtnThickness" Content="Thickness" Margin="0,2" Click="BtnThickness_Click"/>
			</StackPanel>
		</Border>
		<StackPanel x:Name="LoadingMessage" VerticalAlignment="Top" HorizontalAlignment="Left" Background="White" Margin="4" Visibility="Collapsed">
			<TextBlock FontSize="18" FontWeight="Bold" FontStyle="Italic">
				Loading file...
			</TextBlock>
			<ProgressBar x:Name="LoadingMessageProgressBar" HorizontalAlignment="Stretch" Minimum="0" Maximum="100" Height="20" Orientation="horizontal" VerticalAlignment="Center"/>
		</StackPanel>
	</Grid>
</Window>

